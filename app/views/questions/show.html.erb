<div class="question-page">
  <header class="question-header">
    <h1 class="heading"><%= @question.title %></h1>
    <p> <%= @question.description %></p>

<div class="votes">
  <% if @question.voted_by? current_user  %>
  <%= link_to question_vote_path(@question), method: :delete, class:"question-upvote upvote-active" do %>
  <span class="upvote-arrow"></span>
  <span class="upvote-count"> <%= @question.votes.count %></span>
    <%end  %>
  <% else %>
  <%= link_to question_vote_path(@question), method: :post, class:"question-upvote" do %>
  <span class="upvote-arrow"></span>
  <span class="upvote-count"> <%= @question.votes.count %></span>
  <% end  %>
  <% end %>
</div>

    <div class="actions">
      <% if signed_in? && @question.user == current_user %>
      <div class="button">
        <%= link_to '<span class="glyphicon glyphicon-pencil"> </span>'.html_safe, edit_question_path %>
        <%= link_to '<span class="glyphicon glyphicon-trash"> </span>'.html_safe,
        @question, method: :delete, data: {confirm: "Are you sure you want to delete yor question?"} %>
      </div>
      <% end %>
    </div>
  </header>

  <h3>Comments </h3>
  <% @question.comments.each do |comment| %>
  <div class="well">
    <%= comment.body %>
  </div>
  <% end  %>

  <% if signed_in? %>
  <%= form_for [@question, @question.comments.build] do |f| %>
    <div class="form-group">
      <%= f.text_area :body, class: "form-control", placeholder: "Comment on this" %>
    </div>

    <div class="text-right">
      <%= f.submit "Comment", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>



  <h2>Answers</h2>
  <% @question.answers.each do |answer| %>
  <div class="panel panel-default">
      <div class="panel-body">
        <%= answer.description %>
      </div>
      <div class="panel-footer">
      answered by <img src="<%= Gravatar.new("#{answer.user.email}").image_url %>" class="img-circle" />
      </div>
      <% answer.comments.each do |comment| %>
      <div class="well">
      <%= comment.body %>
      </div>
  <% end %>
    </div>
  <% end %>

<% if @question.answers.count == 0 %>
<p>Nobody could solve this problem up until now. We need your help. If you can answer please help out. Otherwise call a friend who knows</p>
<% end %>

<% if signed_in? %>
<h2>Participate and put your own Answer</h2>
  <%= form_for @answer do |f| %>
	<%= f.hidden_field :question_id, value: @question[:id] %>
	<%= f.hidden_field :user_id, value: current_user[:id] if !current_user.nil? %>
	<div class="form-group">
		<%= f.text_area :description, rows: 5, class: "form-control" %>
	</div>
  <div class="text-right">
	<%= f.submit 'Submit Answer', class: 'btn btn-primary' %>
<% end %>


<% end  %>







  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">




    </div>
  </div>
</div>

<div class="text-left">
<div class="button">
<%= link_to  "<span class='glyphicon glyphicon-chevron-left'></span>".html_safe, questions_path %>
</div>
</div>

</div>
